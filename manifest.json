{
  "manifest_version": 3,
  "name": "NoGrok",
  "description": "Remove Grokipedia results from major search engines for a cleaner, source-first search experience.",
  "version": "1.0.0",
  "permissions": ["storage"],
  "icons": {
    "16": "assets/NoGrok-128.png",
    "32": "assets/NoGrok-128.png",
    "48": "assets/NoGrok-128.png",
    "128": "assets/NoGrok-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/*",
        "*://*.bing.com/*",
        "*://duckduckgo.com/*",
        "*://*.duckduckgo.com/*",
        "*://search.brave.com/*",
        "*://*.startpage.com/*",
        "*://*.qwant.com/*",
        "*://qwant.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/NoGrok-128.png",
      "32": "assets/NoGrok-128.png",
      "48": "assets/NoGrok-128.png",
      "128": "assets/NoGrok-128.png"
    }
  }
}
